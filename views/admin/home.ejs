<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-7">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!----======== CSS ======== -->
    <link rel="stylesheet" href="css/home.css">
     
    <!----===== Iconscout CSS ===== -->
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">

    <title>Admin Dashboard Panel</title> 
</head>
<body>
    <nav>
        <div class="logo-name">
            <div class="logo-image">
                <img src="images/logo.png" alt="">
            </div>

            <span class="logo_name"> <a href="/admin/home" class="norm-link">BookMart</a></span>
        </div>

        <div class="menu-items">
            <ul class="nav-links">
                <li><a href="/admin/home">
                    <i class="uil uil-estate"></i>
                    <span class="link-name">Dahsboard</span>
                </a></li>
                <li><a href="/admin/users">
                    <i class="uil uil-user"></i>
                    <span class="link-name">Users</span>
                </a></li>
                <li><a href="/admin/categories">
                    <i class="uil uil-file"></i>
                    <span class="link-name">Categories</span>
                </a></li>
                <li><a href="/admin/products">
                    <i class="uil uil-files-landscapes"></i>
                    <span class="link-name">Products</span>
                </a></li>
                <li><a href="/admin/banners">
                    <i class="uil uil-clipboard-blank"></i>
                    <span class="link-name">Banners</span>
                </a></li>
                <li><a href="/admin/coupons">
                    <i class="uil uil-clipboard-blank"></i>
                    <span class="link-name">Coupons</span>
                </a></li>
                <li><a href="/admin/orders">
                    <i class="uil uil-clipboard-blank"></i>
                    <span class="link-name">Orders</span>
                </a></li>
            </ul>
            
            <ul class="logout-mode">
                <li><a href="/admin/logout">
                    <i class="uil uil-signout"></i>
                    <span class="link-name">Logout</span>
                </a></li>
            </ul>
        </div>
    </nav>

    <section class="dashboard">
        <div class="top">
            <i class="uil uil-bars sidebar-toggle"></i>

            <div class="search-box">
                <i class="uil uil-search"></i>
                <input type="text" placeholder="Search here...">
            </div>
            
            <img src="images/profile.jpg" alt="">
        </div>

        <div class="dash-content">
            <div class="overview">
                <div class="title">
                    <i class="uil uil-tachometer-fast-alt"></i>
                    <span class="text">Dashboard</span>
                </div>

                <div class="boxes">
                    <div class="box box1">
                        <i class="uil uil-user"></i>
                        <span class="text">Total users</span>
                        <span class="number"><%= userCount %> </span>
                    </div>
                    <div class="box box2">
                        <i class="uil uil-files-landscapes"></i>
                        <span class="text">Total products</span>
                        <span class="number"><%= productCount %> </span>
                    </div>
                    <div class="box box3">
                        <i class="uil uil-file"></i>
                        <span class="text">Total categories</span>
                        <span class="number"><%= categoryCount %> </span>
                    </div>
                </div>
            </div>
        </div>

        <input type="hidden" name="" id="placed" value="<%= placeOrderCount %>">
        <input type="hidden" name="" id="packed" value="<%= packedCount %>">
        <input type="hidden" name="" id="shipped" value="<%= shippedCount %>">
        <input type="hidden" name="" id="delivered" value="<%= deliveredCount %>">
        <input type="hidden" name="" id="cancelled" value="<%= cancelledCount %>">
        <input type="hidden" name="" id="failed" value="<%= failedCount %>">

        <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.min.js"></script>
        <div>
        <canvas id="myChart" style="width:100%;max-width:900px; margin: auto; margin-top: 40px;"></canvas>
        <script>
            const a = parseInt(document.getElementById('placed').value)
            const b = parseInt(document.getElementById('packed').value)
            const c = parseInt(document.getElementById('shipped').value)
            const d = parseInt(document.getElementById('delivered').value)
            const e = parseInt(document.getElementById('cancelled').value)
            const f = parseInt(document.getElementById('failed').value)

            var xValues = ["Order placed","Packed", "Shipped", "Delivered", "Cancelled", "failed"];
            var yValues = [a,b,c,d,e,f];
            var barColors = ["MediumSeaGreen","blue", "yellow", "green", "red", "Tomato"];

            new Chart("myChart", {
                type: "bar",
                data: {
                    labels: xValues,
                    datasets: [{
                        backgroundColor: barColors,
                        data: yValues
                    }]
                },
                options: {
                    legend: { display: false },
                    title: {
                        display: true,
                        text: "Order Details"
                    }
                }
            });
        </script>
        </div>
        <script type="text/javascript" src="js/home.js"></script>
    </section>
</body>
</html>