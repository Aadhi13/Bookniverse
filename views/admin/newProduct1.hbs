<div class="content ">
        <button class="btn btn-light mt-3 ms-4"><a href="/admin/products"><i
                    class="fa fa-reply btn-light"></i></a></button>
        <!-- Form Start -->
        <div class="container-fluid pt-4 px-4">
            <div class="row g-4">
                <div class="col-sm-12 col-xl-6">
                    <div class="bg-secondary rounded h-100 p-4">
                        <h2 class="mb-4">Product Add Page</h2>
                        <form action="/admin/addProduct" enctype="multipart/form-data" method="post"
                            name="productAddform" {{!-- onsubmit="return validation()" --}}>
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="floatingInput"
                                    placeholder="name@example.com" name="name" required>
                                <label for="floatingInput">Product Name</label>
                            </div>
                            <div class="form-floating mb-3">
                                <select class="form-select" id="floatingSelect"
                                    aria-label="Floating label select example" name="productCategory" required>
                                    <option selected value="">Product Category</option>
                                    {{#each data}}
                                    <option value="{{this._id}}">{{this.category}}</option>
                                    {{/each}}
                                </select>
                                <label for="floatingSelect">choose from here</label>
                            </div>
                            <div class="d-flex">
                                <div class="form-floating mb-3 col-sm-2">
                                    <input type="number" class="form-control" id="floatingPassword" name="stock"
                                        placeholder="Stock" required>
                                    <label for="floatingPassword">Stock</label>
                                </div>

                                <div class="form-floating mb-3 col-sm-4 col-md-3 ms-3">
                                    <input type="number" class="form-control" id="floatingPassword"
                                        placeholder="Password" name="mrp" required>
                                    <label for="floatingPassword">MRP</label>
                                </div>
                                <div class="form-floating mb-3 col-sm-4 col-md-3 ms-3">
                                    <input type="number" class="form-control" id="floatingPassword"
                                        placeholder="Password" name="sellingPrice" required>
                                    <label for="floatingPassword">Selling Price</label>
                                </div>
                            </div>
                            <div class="form-floating">
                                <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea"
                                    style="height: 150px;" name="description" required></textarea>
                                <label for="floatingTextarea">Description</label>
                            </div>
                            <div class="mb-3">
                                <label for="formFileMultiple" class="form-label">Add Product Photos.</label>
                                <input class="form-control bg-dark" type="file"
                                    accept="image/png, image/gif, image/jpeg" id="formFileMultiple" name="picture"
                                    multiple required>
                            </div>
                            
                            <button type="submit" class="btn btn-success">Submit</button>
                            <button type="reset" class="btn btn-info">reset</button>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
