<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-7">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!----======== CSS ======== -->
    <link rel="stylesheet" href="css/home.css">

    <!----===== Iconscout CSS ===== -->
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css"
        href="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.4/css/jquery.dataTables.css">
    <script src="//cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js" type="text/javascript"></script>

    <title>Admin Dashboard Panel</title>
</head>

<body>
    <nav>
        <div class="logo-name">
            <div class="logo-image">
                <img src="images/logo.png" alt="">
            </div>

            <span class="logo_name"> <a href="/admin/home" class="norm-link">BookMart</a></span>
        </div>

        <div class="menu-items">
            <ul class="nav-links">
                <li><a href="/admin/home">
                    <i class="uil uil-estate"></i>
                    <span class="link-name">Dahsboard</span>
                </a></li>
                <li><a href="/admin/users">
                    <i class="uil uil-user"></i>
                    <span class="link-name">Users</span>
                </a></li>
                <li><a href="/admin/categories">
                    <i class="uil uil-file"></i>
                    <span class="link-name">Categories</span>
                </a></li>
                <li><a href="/admin/products">
                    <i class="uil uil-files-landscapes"></i>
                    <span class="link-name">Products</span>
                </a></li>
                <li><a href="/admin/banners">
                    <i class="uil uil-clipboard-blank"></i>
                    <span class="link-name">Banners</span>
                </a></li>
                <li><a href="/admin/coupons">
                    <i class="uil uil-clipboard-blank"></i>
                    <span class="link-name">Coupons</span>
                </a></li>
                <li><a href="/admin/orders">
                    <i class="uil uil-clipboard-blank"></i>
                    <span class="link-name">Orders</span>
                </a></li>
            </ul>
            
            <ul class="logout-mode">
                <li><a href="/admin/logout">
                    <i class="uil uil-signout"></i>
                    <span class="link-name">Logout</span>
                </a></li>
            </ul>
        </div>
    </nav>

    <section class="dashboard">
        <div class="top">
            <i class="uil uil-bars sidebar-toggle"></i>

            <div class="search-box">
                <i class="uil uil-search"></i>
                <input type="text" placeholder="Search here...">
            </div>

            <img src="images/profile.jpg" alt="">
        </div>
        <div class="dash-content">
            <div class="overview">
            <div class="title">
                <i class="uil uil-tachometer-fast-alt"></i>
                <span class="text">Order Details</span>
            </div>
              <form action="changeOrderStatus" id="changeOrderStatus" method="post">
                  <select class="py-2 mb-2 ml-2" name="orderStatus">
                      <option value="<%= data.status %>"><%= data.status %></option>
                      <option value="Payment failed">Payment failed</option>
                      <option value="Order placed">Order placed</option>
                      <option value="Packed">Packed</option>
                      <option value="Shipped">Shipped</option>
                      <option value="Delivered">Delivered</option>
                      <option value="Cancelled">Cancelled</option>
                  </select>
                  <input type="text" value="<%= data._id %>" name="orderId" hidden>
                  <button class="btn btn-success" type="submit">Save</button>
              </form>
              
              <table class="table table-striped table-dark">
                  <thead>
                      <tr>
                          <th scope="col">SI No</th>
                          <th scope="col">Product Name</th>
                          <th scope="col">Image</th>
                          <th scope="col">Quantity</th>
                      </tr>
                  </thead>
                  <tbody>
                      <%let count = 1; productDetails.forEach((productDetails) => { %>
                      <tr>
                          <th scope="row"><%= count %></th>
                          <td><%=productDetails.productId.name%></td>
                          <td><img src="/<%=productDetails.productId.imagePath%>" width="80"></td>
                          <td><%=productDetails.quantity%></td>
                      </tr>
                      <% count++ }); %>
                  </tbody>
              </table>
            </div>
        </div>        
    </section>
</body>

</html>