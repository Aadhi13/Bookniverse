<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-7">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!----======== CSS ======== -->
    <link rel="stylesheet" href="css/home.css">

    <!----===== Iconscout CSS ===== -->
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css"
        href="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.4/css/jquery.dataTables.css">
    <script src="//cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js" type="text/javascript"></script>

    <title>Admin Dashboard Panel</title>
</head>

<body>
    <nav>
        <div class="logo-name">
            <div class="logo-image">
                <img src="images/logo.png" alt="">
            </div>

            <span class="logo_name"> <a href="/admin/home" class="norm-link">BookMart</a></span>
        </div>

        <div class="menu-items">
            <ul class="nav-links">
                <li><a href="/admin/home">
                    <i class="uil uil-estate"></i>
                    <span class="link-name">Dahsboard</span>
                </a></li>
                <li><a href="/admin/users">
                    <i class="uil uil-user"></i>
                    <span class="link-name">Users</span>
                </a></li>
                <li><a href="/admin/categories">
                    <i class="uil uil-file"></i>
                    <span class="link-name">Categories</span>
                </a></li>
                <li><a href="products">
                    <i class="uil uil-files-landscapes"></i>
                    <span class="link-name">Products</span>
                </a></li>
                <li><a href="banners">
                    <i class="uil uil-clipboard-blank"></i>
                    <span class="link-name">Banners</span>
                </a></li>
            </ul>
            
            <ul class="logout-mode">
                <li><a href="/admin/logout">
                    <i class="uil uil-signout"></i>
                    <span class="link-name">Logout</span>
                </a></li>
            </ul>
        </div>
    </nav>

    <section class="dashboard">
        <div class="top">
            <i class="uil uil-bars sidebar-toggle"></i>

            <div class="search-box">
                <i class="uil uil-search"></i>
                <input type="text" placeholder="Search here...">
            </div>

            <img src="images/profile.jpg" alt="">
        </div>
        <div class="dash-content">
            <div class="overview">
                <div class="title">
                    <i class="uil uil-tachometer-fast-alt"></i>
                    <span class="text">Add new products</span>
                </div>
                <div>
                    <div class="col-sm-12 col-xl-6">
                        <div class="bg-light rounded h-100 p-4">
                            <form id="form" action="/admin/newProduct" method="post" enctype="multipart/form-data">
                                <div class="form-floating mb-3">
                                    <input name="name" type="text" class="form-control" id="name"
                                        placeholder="Book name" required>
                                    <label for="name">Product name</label>
                                </div>
                                <div class="form-floating mb-3">
                                    <input name="author" type="text" class="form-control" id="author"
                                        placeholder="Author name" required>
                                    <label for="author">Author</label>
                                </div>
                                <div class="form-floating mb-3">
                                    <input name="language" type="text" class="form-control" id="language"
                                        placeholder="Language" required>
                                    <label for="language">Language</label>
                                </div>
                                <div class="form-floating mb-3">
                                    <input name="publisher" type="text" class="form-control" id="publisher"
                                        placeholder="Publisher" required>
                                    <label for="publisher">Publisher</label>
                                </div>
                                <div class="form-floating mb-3">
                                    <input name="isbn" type="number" class="form-control" id="isbn"
                                        placeholder="Isbn" required>
                                    <label for="isbn">ISBN</label>
                                </div>
                                <div class="d-flex">
                                    <div class="form-floating mb-3 col-sm-2">
                                        <input type="number" class="form-control" id="floatingPassword" name="stock"
                                            placeholder="Stock" required>
                                        <label for="floatingPassword">Stock</label>
                                    </div>
    
                                    <div class="form-floating mb-3 col-sm-4 col-md-3 ms-3">
                                        <input type="number" class="form-control" id="floatingPassword"
                                            placeholder="Password" name="mrp" required>
                                        <label for="floatingPassword">MRP</label>
                                    </div>
                                    <div class="form-floating mb-3 col-sm-4 col-md-3 ms-3">
                                        <input type="number" class="form-control" id="srp"
                                            placeholder="Password" name="srp" required>
                                        <label for="srp">Selling Price</label>
                                    </div>
                                </div>
                                <div class="form-floating mb-3">
                                    <select class="form-select" id="floatingSelect"
                                        aria-label="Floating label select example" name="blockStatus" required>
                                        <option selected value="">Status</option>
                                        <option value="0">Enable</option>
                                        <option value="1">Disable</option>
                                    </select>
                                    <label for="floatingSelect">Choose from here</label>
                                </div>
                                <div class="form-floating mb-3">
                                    <select class="form-select" id="floatingSelect"
                                        aria-label="Floating label select example" name="category" required>
                                        <option selected value="">Category</option>

                                        <% category.forEach((category)=>{ %>
                                            <option value="<%=   category._id %>"><%= category.name %></option>
                                        <% }); %> 

                                    </select>
                                    <label for="floatingSelect">Choose from here</label>
                                </div>
                                <div class="form-floating mb-3">
                                    <input name="image" type="file" class="form-control" id="image"
                                        accept="image/png, image/gif, image/jpeg" required>
                                    <label for="image">Image</label>
                                </div>
                                <div class="form-floating">
                                    <textarea class="form-control" placeholder="Product description..."
                                        id="description" style="height: 150px;" name="description"  required></textarea>
                                    <label for="description">Description</label>
                                </div>
                                

                                <button type="submit" class="btn mt-3 me-2 btn-success">Add product </button>
                                <button type="reset" class="btn mt-3 btn-info">Reset</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>

</html>