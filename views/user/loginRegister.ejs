<!DOCTYPE html>
<html>

<head>
    <title>Login and Register</title>
    <link rel="stylesheet" type="text/css" href="slide navbar style.css">
    <link href="https://fonts.googleapis.com/css2?family=Jost:wght@500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/loginRegister.css">
</head>

<body>
    <section>
        <div class="main">
            <input <% if(status) { %>checked<% } %> type="checkbox" id="chk" aria-hidden="true">

            <div class="signup">
                <form id="form" action="/signup" method="post">
                    <label for="chk" aria-hidden="true">Sign up</label>
                    <input type="text" name="name" placeholder="Name" required>
                    <input type="email" name="email" placeholder="Email" required>
                    <input type="password" name="password" placeholder="Password" required>
                    <button type="submit">Sign up</button>
                </form>
            </div>

            <div class="login">
                <form id="form" action="/login" method="post" onsubmit="validateInputs()">
                    <label for="chk" aria-hidden="true">Login</label>
                    <input type="email" name="email" placeholder="Email" required="">
                    <input type="password" name="password" placeholder="Password" required="">
                    <button type="submit">Login</button>
                    <div class="mb-2" style="text-align: center;">
                        <a class="text-info" href="/forgotPassword" style="text-decoration: underline; color: red;">Forgot password?</a>
                    </div>
                </form>
            </div>
        </div>
        <div class="messages">
            <% if(typeof message !== 'undefined'){ %>
                <h4 style="color: red;"><%= message %></h4>
            <% } %>
            <% if(typeof FRMessage !== 'undefined'){ %>
                <h4 style="color: red;"><%= FRMessage %></h4>
            <% } %>
            <% if(typeof SRMessage !== 'undefined'){ %>
                <p style="color: green;"><%= SRMessage %></p>
            <% } %>
        </div>
    </section>
</body>

</html>